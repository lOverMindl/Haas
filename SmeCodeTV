-- Historical prices
        local high = HighPrices()
        local low = LowPrices()
        local close = ClosePrices()
        local cp = CurrentPrice()
-- Stoch MOM Index
      InputGroupHeader('SMI Settings')
        local a = Input('percent K Lenght', 20)
        local b = Input('Percent D Lenght', 10)
        local ll = GetLows(low,a)
        local hh = GetHighs(high,a)
        local diff = hh-ll
        local rdiff = close -((hh+ll)/2)
        local avgrel = EMA(rdiff,b)
        local avgdiff = EMA(diff,b)
        local SMI = (avgdiff !=0 and (avgrel/(avgdiff/2))*100) or 0
        local SMIsignal = EMA(SMI,b)
        Plot(1,'SMIsignal',SMIsignal,Red)
        Plot(1,'SMI',SMI,Green)